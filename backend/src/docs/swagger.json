				"security": [
					{
						"BearerAuth": []
					}
				]
			}
		},
		"/friends/requests/6932ea17f346f4e2d0876bea/decline": {
			"post": {
				"summary": "Decline Friend Request",
				"responses": {},
				"tags": ["Friend"],
				"security": [
					{
						"BearerAuth": []
					}
				]
			}
		},
		"/friends/": {
			"get": {
